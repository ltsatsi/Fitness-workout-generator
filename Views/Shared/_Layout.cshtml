<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitnessWG</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessWG.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="d-flex flex-column flex-shrink-0 p-3 shadow-sm bg-theme" style="width: 250px; min-height: 100vh;">
            <!-- Brand / Logo -->
            <a asp-action="Index" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-decoration-none">
                <span class="fs-4 text-light">FitnessWG</span>
            </a>

            <!-- Main Nav Links -->
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link text-light @((ViewData["ActivePage"]?.ToString() == "Home") ? "bg-danger" : "")" aria-current="page">
                        <i class="bi bi-house"></i>
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Privacy" class="nav-link text-light @((ViewData["ActivePage"]?.ToString() == "Privacy") ? "bg-danger" : "")">
                        <i class="bi bi-file-text"></i>

                        Privacy
                    </a>
                </li>
                <!-- Add more links here -->
                <li class="nav-item">
                    <a asp-controller="User" asp-action="Details" asp-route-id="1" class="nav-link text-light @((ViewData["ActivePage"]?.ToString() == "Dashboard") ? "bg-danger" : "")">
                        <i class="bi bi-grid"></i>
                        Dashboard
                    </a>
                </li>
            </ul>

            <!-- Spacer to push bottom section down --> 
            <div class="mt-auto">
                <!-- Logout Link -->
                <a href="/Account/Logout" class="nav-link text-light w-100"><i class="bi bi-door-open"></i>Logout</a>
                <!-- User Profile -->
                <div class="d-flex align-items-center mb-2">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png"
                         alt="User Avatar" class="rounded-circle me-2" width="40" height="40">
                    <div>
                        <div class="fw-bold">Guest</div>
                        <small class="text-muted">example@gmail.com</small>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="container flex-grow-1 p-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>