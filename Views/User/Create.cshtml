@model FitnessWG.Models.User

@{
    ViewData["Title"] = "AddUser";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <!-- Form Header -->
            <div class="text-center mb-5">
                <h2 class="mb-3">Create Your Profile</h2>
                <p class="text-muted">Complete your information to get personalized workout recommendations</p>
            </div>

            <!-- Registration Form -->
            <div class="card shadow-sm border-0 bg-theme">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <!-- Personal Information Section -->
                        <div class="mb-4">
                            <h5 class="mb-3 border-bottom pb-2">Personal Information</h5>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="@Model.UserName" class="form-label"></label>
                                    <input asp-for="@Model.UserName" type="text" class="form-control" placeholder="Enter your username">
                                    <span asp-validation-for="@Model.UserName" class="form-text text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="@Model.Email" class="form-label"></label>
                                    <input asp-for="@Model.Email" type="email" class="form-control" placeholder="Enter your email">
                                    <span asp-validation-for="@Model.Email" class="form-text text-danger small"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="@Model.Age" class="form-label"></label>
                                    <input asp-for="@Model.Age" type="number" class="form-control" placeholder="Age">
                                    <span asp-validation-for="@Model.Age" class="form-text text-danger small"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="@Model.Gender" class="form-label"></label>
                                    <select asp-for="@Model.Gender" class="form-select custom-select-dark">
                                        <option value="0">Female</option>
                                        <option value="1">Male</option>
                                        <option value="2">Other</option>
                                    </select>
                                    <span asp-validation-for="@Model.Gender" class="form-text text-danger small"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="@Model.Location" class="form-label"></label>
                                    <input asp-for="@Model.Location" type="text" class="form-control" placeholder="Your location">
                                    <span asp-validation-for="@Model.Location" class="form-text text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Physical Metrics Section -->
                        <div class="mb-4">
                            <h5 class="mb-3 border-bottom pb-2">Physical Metrics</h5>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="@Model.Height" class="form-label"></label>
                                    <input asp-for="@Model.Height" type="number" class="form-control" placeholder="Height in cm">
                                    <span asp-validation-for="@Model.Height" class="form-text text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="@Model.Weight" class="form-label"></label>
                                    <input asp-for="@Model.Weight" type="number" class="form-control" placeholder="Weight in kg">
                                    <span asp-validation-for="@Model.Weight" class="form-text text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Fitness Goals Section -->
                        <div class="mb-4">
                            <h5 class="mb-3 border-bottom pb-2">Fitness Goals</h5>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="@Model.ExperienceLevel" class="form-label">Experience Level</label>
                                    <select asp-for="@Model.ExperienceLevel" class="form-select custom-select-dark">
                                        <option value="0">Beginner</option>
                                        <option value="1">Intermediate</option>
                                        <option value="2">Advanced</option>
                                    </select>
                                    <span asp-validation-for="@Model.ExperienceLevel" class="form-text text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="@Model.Goal" class="form-label"></label>
                                    <select asp-for="@Model.Goal" class="form-select custom-select-dark">
                                        <option value="0">Strength</option>
                                        <option value="1">Weight Loss</option>
                                    </select>
                                    <span asp-validation-for="@Model.Goal" class="form-text text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="@Model.DaysPerWeek" class="form-label">Days Per Week</label>
                                    <input asp-for="@Model.DaysPerWeek" type="number" class="form-control" placeholder="Training days per week">
                                    <span asp-validation-for="@Model.DaysPerWeek" class="form-text text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Equipment Section -->
                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="@Model.HasEquipment" class="form-check-input" type="checkbox" id="hasEquipment">
                                <label asp-for="@Model.HasEquipment" class="form-check-label" for="hasEquipment">
                                    Have access to workout equipment
                                </label>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-outline-light btn-lg">Create Profile</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
